{% extends 'template.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>Instance</th>
                    <th>Num of processes</th>
                    <th>Version</th>
                    <th>Actions</th>
                </tr>
                {% for name,instance in instances %}
                    <tr>
                        <td>{{ name }}</td>
                        <td>{{ instance.getAllProcessInfo()|length|pluralize('process') }}</td>
                        <td>{{ instance.getVersion() }}</td>
                        <td>
                            {% include 'actions_all.twig' with {'name': name} only %}
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="4"><i>No instances</i></td></tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
